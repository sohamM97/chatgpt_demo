{
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true,
        }
    },
    "flake8.args": [
        "--max-line-length=88",
        "--ignore=E203, W503"
    ],
}